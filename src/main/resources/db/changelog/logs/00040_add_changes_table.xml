<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="40" author="benas.strauka">
        <preConditions>
            <tableExists tableName="tricks_variants"/>
        </preConditions>
        <comment>Add "updated " column to trick variants</comment>

        <addColumn tableName="tricks_variants">
            <column name="updated_by" type="int unsigned">
                <constraints
                    foreignKeyName="updated_by_trick_variant_fk"
                    references="tricks_variants(id)"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>